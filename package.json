{
  "name": "transformer",
  "version": "0.0.0-alpha.0",
  "main": "transformer.js",
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    "pretest": "eslint --ignore-path .gitignore .",
    "test": "istanbul cover _mocha -- test -R list --recursive --ui bdd --slow 10 --timeout 500",

    "clean": "npm prune",
    "outdated": "npm outdated --depth=0",

    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "mocha": true
    },
    "rules": {
      "arrow-parens": ["error", "as-needed"],
      "comma-dangle": ["error", "always-multiline"],
      "import/no-dynamic-require": "off",
      "import/no-extraneous-dependencies": ["error", { "devDependencies": true}],
      "max-len": ["error", 240],
      "no-param-reassign": ["error", { "props": false }]
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RomansBermans/transformer.git"
  },
  "bugs": {
    "url": "https://github.com/RomansBermans/transformer/issues"
  },
  "homepage": "https://github.com/RomansBermans/transformer",
  "author": "Romans Bermans <romans.bermans@gmail.com>",
  "license": "ISC"
}
